<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_outline"
    tools:context="com.johnson.jyvertification.Controller.Activitys.ActivityVertificationFragment"
    tools:showIn="@layout/activity_vertification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/vetification_text_title"
                android:text="姓名" />

            <EditText
                android:id="@+id/account_name"
                style="@style/vetification_edite_text"
                android:hint="账户名与身份证姓名一致" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/vetification_text_title"
                android:text="证件" />


            <EditText
                android:id="@+id/identify"
                style="@style/vetification_edite_text"
                android:hint="暂时只支持身份证件" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_credit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/vetification_text_title"
                    android:text="银行卡号" />

                <EditText
                    android:id="@+id/credit_card"
                    style="@style/vetification_edite_text"
                    android:hint="有效的银行卡号" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/vetification_text_title"
                    android:text="手机号码" />


                <EditText
                    android:id="@+id/cell_phone"
                    style="@style/vetification_edite_text"
                    android:hint="银行预留手机号" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_sure_background_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>
