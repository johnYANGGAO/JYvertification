<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.johnson.jyvertification.Controller.MeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card_outline">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/base_info"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/backgroundlistitme">

                    <TextView
                        style="@style/text_itme"
                        android:text="基本信息" />

                    <ImageView style="@style/accessory_indicator" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/card_outline" />

                <RelativeLayout
                    android:id="@+id/firm_info"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/backgroundlistitme">

                    <TextView
                        style="@style/text_itme"
                        android:text="账户信息" />

                    <ImageView style="@style/accessory_indicator" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <RelativeLayout
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:visibility="gone"
                android:background="@drawable/backgroundlistitme">

                <TextView
                    style="@style/text_itme"
                    android:text="联系方式" />

                <ImageView style="@style/accessory_indicator" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <RelativeLayout
                android:id="@+id/extra"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/backgroundlistitme">

                <TextView
                    style="@style/text_itme"
                    android:text="其他" />

                <ImageView style="@style/accessory_indicator" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</FrameLayout>
